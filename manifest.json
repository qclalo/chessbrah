{
  "manifest_version": 3,
  "name": "Chess.com WNM Title Adder",
  "version": "1.0",
  "description": "Adds the WNM title next to your name on Chess.com.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
